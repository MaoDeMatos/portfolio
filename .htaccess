#--------------------------------------------------
# Options
#--------------------------------------------------

Options +FollowSymlinks
RewriteEngine on

#--------------------------------------------------
# URL Rewriting :
#--------------------------------------------------

# Rewrite for routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php?r=$1 [QSA,N]

